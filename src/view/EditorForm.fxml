            <TextField fx:id="txtSearch" layoutX="14.0" layoutY="8.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="5.0" />
            <Button layoutX="300.0" layoutY="8.0" mnemonicParsing="false" onAction="#btnFindUp_OnAction" prefHeight="26.0" prefWidth="33.0" text="^" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="305.0" AnchorPane.topAnchor="5.0" />
            <Button layoutX="334.0" layoutY="9.0" mnemonicParsing="false" onAction="#btnFindDown_OnAction" prefHeight="26.0" prefWidth="33.0" rotate="180.0" text="^" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="345.0" AnchorPane.rightAnchor="21.4" AnchorPane.topAnchor="5.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
